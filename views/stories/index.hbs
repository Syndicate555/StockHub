<h3>All Public Stock Stories</h3>
<br>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <br>
                <div class="chip">
                    {{!-- <img src="{{user.image}}" alt=""> --}}
                    <a href="/stories/user/{{user._id}}">By {{user.firstName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    <footer class="footer">
        <p>Site by
            <a href="https://saffataziz.site" target="_blank"> Saffat Aziz</a>
        </p>
    </footer>
    {{else}}
    <p>No stories to display</p>


    {{/each}}
</div>